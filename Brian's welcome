    <script>
        let currentSlide = 0;
        let isPlaying = true;
        let isMuted = false;
        let slideTimeout;
        let synth = window.speechSynthesis;
        let slides;
        let totalSlides;

        function startExperience() {
            document.getElementById('preloader').style.display = 'none';
            document.getElementById('main-container').style.display = 'block';
            
            slides = document.querySelectorAll('.slide');
            totalSlides = slides.length;
            
            showSlide(0);
            playAudio();
        }

        function showSlide(index) {
            // Hide all slides
            slides.forEach(slide => {
                slide.classList.remove('active');
            });

            // Show current slide
            currentSlide = index;
            slides[currentSlide].classList.add('active');

            // Update progress
            const progress = ((currentSlide + 1) / totalSlides) * 100;
            document.getElementById('progress-bar').style.width = progress + '%';
            document.getElementById('section-indicator').textContent = `${currentSlide + 1} / ${totalSlides}`;

            // Auto-advance if playing
            if (isPlaying && currentSlide < totalSlides - 1) {
                const duration = parseInt(slides[currentSlide].dataset.duration) || 5000;
                clearTimeout(slideTimeout);
                slideTimeout = setTimeout(() => {
                    nextSlide();
                }, duration);
            }
        }

        function playAudio() {
            if (isMuted) return;
            
            synth.cancel(); // Stop any current speech
            
            const text = slides[currentSlide].dataset.text;
            if (text) {
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.rate = 1.1;
                utterance.pitch = 1;
                
                // Try to get a good voice
                const voices = synth.getVoices();
                const preferredVoice = voices.find(v => v.name.includes('Daniel') || v.name.includes('Google') || v.lang.includes('en'));
                if (preferredVoice) {
                    utterance.voice = preferredVoice;
                }
                
                synth.speak(utterance);
            }
        }

        function nextSlide() {
            if (currentSlide < totalSlides - 1) {
                showSlide(currentSlide + 1);
                playAudio();
            }
        }

        function prevSlide() {
            if (currentSlide > 0) {
                showSlide(currentSlide - 1);
                playAudio();
            }
        }

        function togglePlayPause() {
            isPlaying = !isPlaying;
            const btn = document.getElementById('playPauseBtn');
            
            if (isPlaying) {
                btn.textContent = '‚è∏';
                btn.classList.add('active');
                // Resume
                const duration = parseInt(slides[currentSlide].dataset.duration) || 5000;
                slideTimeout = setTimeout(() => {
                    nextSlide();
                }, duration);
            } else {
                btn.textContent = '‚ñ∂';
                btn.classList.remove('active');
                clearTimeout(slideTimeout);
                synth.cancel();
            }
        }

        function toggleMute() {
            isMuted = !isMuted;
            const btn = document.getElementById('muteBtn');
            btn.textContent = isMuted ? 'üîá' : 'üîä';
            
            if (isMuted) {
                synth.cancel();
            } else {
                playAudio();
            }
        }

        // Keyboard controls
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' || e.key === ' ') {
                nextSlide();
                playAudio();
            } else if (e.key === 'ArrowLeft') {
                prevSlide();
                playAudio();
            } else if (e.key === 'p') {
                togglePlayPause();
            } else if (e.key === 'm') {
                toggleMute();
            }
        });

        // Load voices
        if (synth.onvoiceschanged !== undefined) {
            synth.onvoiceschanged = () => {};
        }
    </script>


</body></html>
